{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "PIPELLM AI",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "search": {
    "enabled": true,
    "provider": "algolia",
    "algolia": {
      "applicationId": "YOUR_APPLICATION_ID",
      "indexName": "pipellm-docs",
      "apiKey": "YOUR_SEARCH_API_KEY"
    }
  },
  "aiChat": {
    "enabled": true,
    "provider": "anthropic",
    "anthropic": {
      "apiKey": "YOUR_ANTHROPIC_API_KEY",
      "model": "claude-3-sonnet",
      "systemPrompt": "You are an AI assistant that helps developers with PipeLLM Gateway documentation. Only answer questions related to the documentation content."
    }
  },
  "navigation": {
    "languages": [
      {
        "language": "en",
        "tabs": [
          {
            "tab": "Guides",
            "groups": [
              {
                "group": "Quick Start",
                "pages": ["index", "quickstart"]
              },
              {
                "group": "Use Cases",
                "pages": [
                  "use-cases/claude-code",
                  "use-cases/nano-banana",
                  "use-cases/websearch"
                ]
              },
              {
                "group": "Platform Guide",
                "pages": ["guides/errors", "guides/rate-limits"]
              }
            ]
          },
          {
            "tab": "API Reference",
            "groups": [
              {
                "group": "Getting Started",
                "pages": ["api-reference/introduction"]
              },
              {
                "group": "OpenAI Compatible",
                "pages": [
                  "api-reference/openai/overview",
                  "api-reference/openai/chat-completions",
                  "api-reference/openai/langchain"
                ]
              },
              {
                "group": "Anthropic",
                "pages": [
                  "api-reference/anthropic/overview",
                  "api-reference/anthropic/messages",
                  "api-reference/anthropic/tool-use",
                  "api-reference/anthropic/langchain"
                ]
              },
              {
                "group": "Gemini",
                "pages": [
                  "api-reference/gemini/overview",
                  "api-reference/gemini/generate-content",
                  "api-reference/gemini/langchain"
                ]
              }
            ]
          }
        ]
      },
      {
        "language": "zh",
        "tabs": [
          {
            "tab": "指南",
            "groups": [
              {
                "group": "快速开始",
                "pages": ["index.zh", "quickstart.zh"]
              },
              {
                "group": "应用场景",
                "pages": [
                  "use-cases/claude-code.zh",
                  "use-cases/nano-banana.zh",
                  "use-cases/websearch.zh"
                ]
              },
              {
                "group": "平台指南",
                "pages": ["guides/errors.zh", "guides/rate-limits.zh"]
              }
            ]
          },
          {
            "tab": "API 参考",
            "groups": [
              {
                "group": "快速开始",
                "pages": ["api-reference/introduction.zh"]
              },
              {
                "group": "OpenAI 兼容",
                "pages": [
                  "api-reference/openai/overview.zh",
                  "api-reference/openai/chat-completions.zh",
                  "api-reference/openai/langchain.zh"
                ]
              },
              {
                "group": "Anthropic",
                "pages": [
                  "api-reference/anthropic/overview.zh",
                  "api-reference/anthropic/messages.zh",
                  "api-reference/anthropic/tool-use.zh",
                  "api-reference/anthropic/langchain.zh"
                ]
              },
              {
                "group": "Gemini",
                "pages": [
                  "api-reference/gemini/overview.zh",
                  "api-reference/gemini/generate-content.zh",
                  "api-reference/gemini/langchain.zh"
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@pipellm.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Console",
      "href": "https://console.pipellm.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/pipellm",
      "github": "https://github.com/pipellm",
      "linkedin": "https://linkedin.com/company/pipellm"
    }
  }
}
